<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Headline -->
    <style name="HeadingMainText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/oswald_medium</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/oswald_semibold</item>
        <item name="android:layout_margin">18dp</item>
    </style>

    <!-- CategoryCard -->
    <style name="CategoryCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/oswald_medium</item>
    </style>

    <!-- CopyText -->
    <style name="CopyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <!-- Standard Button-->
    <style name="StandardButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>
</resources>
